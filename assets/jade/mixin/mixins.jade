//- Mixins Drag and Drop
mixin drag(texto,display)
    if display == 'inline'
        span.drag-cont
            span.drag= texto
    else
        .drag-cont
            span.drag= texto
//- Mixins Botones 
mixin validar(alineacion)
    if alineacion == 'center'
        .col.s12.col.m12.col.md12.col.lg12.ta-c
            +btncheck('inline')
            +btnstart('inline')
    else if alineacion == 'left'
        .col.s12.col.m12.col.md12.col.lg12.ta-l
            +btncheck('inline')
            +btnstart('inline')
    else
        .col.s12.col.m12.col.md12.col.lg12.ta-r
            +btncheck('inline')
            +btnstart('inline')
