//- Mixinng Botiones Unir
mixin unir(texto1,texto2)
    .row.botonesUnir
        .col.s5: .botonUnir_1= texto1
        .col.s5.offset-s2: .botonUnir_2= texto2

//- Mixinng Select
mixin select(...items)
    label.input
        select()
            option(hidden)
            each item in items
                option= item

//- Mixinng Inputs
mixin input(placeholder,valor)
    .btnPest
        input(placeholder=placeholder)

//- Mixins botones
